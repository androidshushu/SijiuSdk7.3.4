<?xml version="1.0" encoding="utf-8"?>
<com.shiyue.mhxy.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sjwhite"
    android:orientation="vertical" >

    <com.shiyue.mhxy.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="100%w"

        android:background="@color/sjblue_s"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            app:layout_textSizePercent="50%h"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center"

            android:text="支付"
            android:textColor="@color/sjwhite"
           />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/close_while"
            app:layout_heightPercent="80%h"
            app:layout_widthPercent="80%h" />
        <!--<TextView-->
            <!--android:id="@+id/tv_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:textColor="@color/sjwhite"-->
            <!--app:layout_textSizePercent="6%h"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="关闭"-->

      <!--/>-->

    </com.shiyue.mhxy.support.PercentRelativeLayout>

    <WebView
        android:id="@+id/web_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

</com.shiyue.mhxy.support.PercentLinearLayout>