<?xml version="1.0" encoding="utf-8"?>
<com.shiyue.mhxy.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_regist_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.shiyue.mhxy.support.PercentLinearLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="80%"
        app:layout_widthPercent="60%"
        android:background="@drawable/corner_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
       >

        <com.shiyue.mhxy.support.PercentRelativeLayout
            android:id="@+id/lilayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%"
            android:background="@drawable/corner_bg_top"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/btn_ph_login"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="100%h"
                app:layout_widthPercent="40%w"
                android:clickable="true"
                android:gravity="center"
                android:text="手机号登录"
                android:textColor="#f7f8f9"
                android:layout_centerHorizontal="true"
                app:layout_textSizePercent="40%h"
                android:layout_alignParentTop="true"
            />

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="80%h"
                app:layout_widthPercent="80%h"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sy_goback" />

        </com.shiyue.mhxy.support.PercentRelativeLayout>

        <com.shiyue.mhxy.support.PercentFrameLayout
            android:id="@+id/frg_regist_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="85%h"
            app:layout_widthPercent="90%w"

            />
    </com.shiyue.mhxy.support.PercentLinearLayout>

</com.shiyue.mhxy.support.PercentLinearLayout>